{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./",
    "module": "esnext",
    "target": "es5",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true, // map 파일을 생성할 것인가
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "lib": ["DOM", "ES6", "ESNext"],
    "allowJs": true,
    "declaration": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "composite": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": [
    "./src/**/*",
  ]
}
